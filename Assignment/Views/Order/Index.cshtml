@model IEnumerable<Assignment.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
    <a class="btn btn-primary " asp-action="Create">
        <i class="fa-solid fa-plus fa-beat"></i> &nbsp; Add New Customer
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippedDate)
            </td>
            <td>
                    @{
                        string CustomerName = @item.Customer.FirstName + " " + @item.Customer.LastName;
                    }
                @Html.DisplayFor(modelItem => CustomerName)
            </td>
            <td>
                    @{
                        string StaffName= @item.Staff.FirstName + " " + @item.Staff.LastName;
                    }
                @Html.DisplayFor(modelItem => StaffName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.StoreName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.OrderId"><i class="fa-solid fa-pen-to-square"></i> </a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.OrderId"> <i class="fa-solid fa-trash"></i> </a>
            </td>
        </tr>
}
    </tbody>
</table>
