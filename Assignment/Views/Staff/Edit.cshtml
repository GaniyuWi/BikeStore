@model Assignment.Models.VModels.StaffVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Staff.StaffId" />
            <div class="form-group">
                <label asp-for="Staff.FirstName" class="control-label"></label>
                <input asp-for="Staff.FirstName" class="form-control" />
                <span asp-validation-for="Staff.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.LastName" class="control-label"></label>
                <input asp-for="Staff.LastName" class="form-control" />
                <span asp-validation-for="Staff.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Email" class="control-label"></label>
                <input asp-for="Staff.Email" class="form-control" />
                <span asp-validation-for="Staff.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Phone" class="control-label"></label>
                <input asp-for="Staff.Phone" class="form-control" />
                <span asp-validation-for="Staff.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Active" class="control-label"></label>
                <input asp-for="Staff.Active" class="form-control" />
                <span asp-validation-for="Staff.Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.StoreId" class="control-label"></label>
                <select asp-for="Staff.StoreId" class="form-control" asp-items="@Model.StoreList">
                    <option disabled>Select Store</option>
                </select>
                <span asp-validation-for="Staff.StoreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.ManagerId" class="control-label"></label>
                <select asp-for="Staff.ManagerId" class="form-control" asp-items="@Model.ManagerList">
                    <option disabled>Select Store</option>
                </select>
                <span asp-validation-for="Staff.ManagerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary " asp-action="Index"> <i class="fa-solid fa-right-from-bracket fa-rotate-180"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
