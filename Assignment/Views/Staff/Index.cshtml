@model IEnumerable<Assignment.Models.Staff>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
    <a class="btn btn-primary " asp-action="Create">
        <i class="fa-solid fa-plus fa-beat"></i> &nbsp; Add New Customer
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                    @{
                        string name;
                        if(item.ManagerId!=null){
                           name = @item.Manager.FirstName +" "+ @item.Manager.LastName;
                        }
                        else
                        {
                            name = "CEO or not managed";
                        }
                }
                @Html.DisplayFor(modelItem => name )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.StoreName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.StaffId"><i class="fa-solid fa-pen-to-square"></i> </a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.StaffId"> <i class="fa-solid fa-trash"></i> </a>
            </td>
        </tr>
}
    </tbody>
</table>
